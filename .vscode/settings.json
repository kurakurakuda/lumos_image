{
  // "front-end"フォルダ配下のeslintが見に行くtsconfig.jsonを指定
  "eslint.workingDirectories": ["./front-end"],
  // ファイル保存時の自動フォーマット有効
  "editor.formatOnSave": true,
  // デフォルトフォーマッターをPrettierに指定
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    // ファイル保存時に ESLint でフォーマット
    "source.fixAll.eslint": true
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#537fa5",
    "activityBar.background": "#537fa5",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#d4aac1",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#537fa5",
    "statusBar.background": "#426583",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#537fa5",
    "statusBarItem.remoteBackground": "#426583",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#426583",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#42658399",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#426583"
}
